{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Panier</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Offre</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for element in data %}
                            <tr>
                                <td>{{element.offre.type}}</td>
                                <td>{{element.offre.prix}} € </td>
                                <td>{{element.quantity}}</td>
                                <td> {{ element.quantity * element.offre.prix }} €</td>
                                <td>
                                    <a href="{{path('cart_add',{id: element.offre.id})}}" class="btn btn-success">+</a>
                                    <a href="{{path('cart_remove',{id: element.offre.id})}}" class="btn btn-warning">-</a>
                                    <a href="{{path('cart_delete',{id: element.offre.id})}}" class="btn btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5"> Votre panier est vide</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                        
                            <td colspan="3">Total</td>
                            <td> {{ total }}  €</td>
                            <td> <a href="{{path('cart_empty')}}" class="btn btn-danger">Vider</a> </td>
                        </tr>
                    </tfoot>
                </table>
                <a href="{{path('app_orders_add')}}" class="btn btn-danger">Valider mon panier et passer au paiement</a> 
            </div>
            
        </section>
    </main>
{% endblock %}
